@model punto.Models.tbtelefonos


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Crear</title>
</head>
<body>
    <div>
        @using(Html.BeginForm())
        {
            @Html.ValidationSummary()
        @Html.LabelFor(a=>a.numero)
        @Html.TextBoxFor(a=>a.numero)
        @Html.ValidationMessageFor(a => a.numero, "", new { style="color:red"})
<br />
            <br />
        @Html.LabelFor(a=>a.tipo)
        @Html.TextBoxFor(a=>a.tipo)
        @Html.ValidationMessageFor(a => a.tipo, "", new { style="color:red"})
<br />
            <br />
        @Html.LabelFor(a=>a.codigoarea)
        @Html.TextBoxFor(a=>a.codigoarea)
        @Html.ValidationMessageFor(a => a.codigoarea, "", new { style="color:red"})
<br />
            <br />

              @Html.LabelFor(a=>a.idlugares)
              //@Html.DropDownListFor(a=>a.tblugares,Model.tblugares)
 <br />
            <br />
                       
           @Html.LabelFor(a=>a.fechacreacion)
        @Html.TextBoxFor(a=>a.fechacreacion)
        @Html.ValidationMessageFor(a => a.fechacreacion, "", new { style="color:red"})   
            <br />
            <br />
              @Html.LabelFor(a=>a.fechamodificacion)
        @Html.TextBoxFor(a=>a.fechamodificacion)
        @Html.ValidationMessageFor(a => a.fechamodificacion, "", new { style="color:red"}) 
            
 <br /> 
            <br />     
                   @Html.LabelFor(a=>a.estado)     
            var lista=new List<SelectListItem>(){
                new SelectListItem(){ Text="True", Value="1"},
                new SelectListItem(){ Text="False", Value="0"},
            };
          
       @Html.DropDownListFor(a=>a.estado,lista)
            <br />
            <br />

        <input type="submit"value="enviar" />
        }


        <!--vista julio milguer, telefonos-->
        <table border="1">
            <tr>
                <td>@Html.Label("idtelefono")</td>
                <td>
                    @Html.TextBox("tbidtelefono")
                </td>
            </tr>
            <tr>
                <td> @Html.Label("Numero")</td>
                <td>@Html.TextBox("tbnumero", " ", new { placeholder = "local o celular", @class = "textos" })</td>

            </tr>
            <tr>
                <td> @Html.Label("Tipo")</td>
                <td>@Html.TextBox("tbtipo")</td>

            </tr>
            <tr>
                <td> @Html.Label("codigo Area")</td>
                <td>
                    @{var listaarea = new List<SelectListItem>(){
                new SelectListItem(){ Text="area1", Value="1"}
                          };   }
                @Html.DropDownList("DLarea", listaarea)
            </td>

        </tr>
        <tr>
            <td> @Html.Label("ID lugares")</td>
            <td>
                @{var listalugares = new List<SelectListItem>(){
                new SelectListItem(){ Text="lugar1", Value="1"}
                          };   }
            @Html.DropDownList("DLlugares", listalugares)
        </td>

    </tr>
    <tr>
        <td> @Html.Label("fecha creacion")</td>
        <td>@Html.TextBox("tbfechacreacion")</td>

    </tr>
    <tr>
        <td> @Html.Label("fecha modificacion")</td>
        <td>@Html.TextBox("tbfechamodificacion")</td>

    </tr>
    <tr>
        <td> @Html.Label("estado")</td>
        <td>@Html.TextBox("tbestado")</td>

    </tr>
    <tr>
        <td colspan="2"> <input type="submit" value="enviar" /></td>


    </tr>





    </table>

    </div>
</body>
</html>